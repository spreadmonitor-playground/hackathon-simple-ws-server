{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "target": "es2019",
    "outDir": "build",
    "rootDir": "./src",
    "strict": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["build", "node_modules", "**/*.spec.ts", "testing/**"]
}